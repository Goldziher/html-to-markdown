{
  "name": "@html-to-markdown/wasm",
  "version": "2.2.0",
  "description": "High-performance HTML to Markdown converter - WebAssembly bindings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Goldziher/html-to-markdown",
  "license": "MIT",
  "keywords": [
    "html",
    "markdown",
    "converter",
    "rust",
    "wasm",
    "webassembly"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "wasm-pack build --target bundler --out-dir dist --scope html-to-markdown",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir dist-node --scope html-to-markdown",
    "build:web": "wasm-pack build --target web --out-dir dist-web --scope html-to-markdown",
    "build:all": "pnpm run build && pnpm run build:nodejs && pnpm run build:web",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:wasm-pack": "wasm-pack test --headless --chrome",
    "clean": "rm -rf dist dist-node dist-web node_modules pkg"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "vitest": "^3.0.0",
    "wasm-pack": "^0.13.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "up": "^1.0.2"
  }
}
