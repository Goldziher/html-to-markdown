{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"emitDeclarationOnly": false,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "tests", "node_modules"]
}
