{
  "name": "html-to-markdown",
  "version": "2.2.0",
  "description": "High-performance HTML to Markdown converter with native Node.js and WebAssembly support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "html2md": "./dist/cli.js",
    "html-to-markdown": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "import": "./dist/index.mjs",
        "default": "./dist/index.js"
      },
      "node": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "bun": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "deno": {
        "import": "./dist/index.mjs"
      },
      "default": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  },
  "browser": {
    "./dist/cli.js": false,
    "./bin/*": false
  },
  "sideEffects": false,
  "repository": "https://github.com/Goldziher/html-to-markdown",
  "license": "MIT",
  "keywords": [
    "html",
    "markdown",
    "converter",
    "rust",
    "native",
    "wasm",
    "fast",
    "performance"
  ],
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:cli": "cargo build --release --package html-to-markdown-cli --manifest-path ../../Cargo.toml && node scripts/copy-cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run build && npm run build:cli"
  },
  "dependencies": {
    "@html-to-markdown/node": "workspace:*",
    "@html-to-markdown/wasm": "workspace:*",
    "up": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/ui": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
