# frozen_string_literal: true

# Steepfile for type checking html-to-markdown Ruby gem

target :lib do
  signature "sig"

  check "lib"

  # Configure libraries
  library "pathname"
  library "open3"

  # Ignore vendor directory
  ignore "vendor"

  # Ignore spec directory
  ignore "spec"

  # Ignore bin directory
  ignore "bin"
end
