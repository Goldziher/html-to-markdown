{
  "name": "html-to-markdown-monorepo",
  "version": "2.2.0",
  "private": true,
  "description": "HTML to Markdown converter - monorepo root",
  "scripts": {
    "build": "pnpm run build:node && pnpm run build:wasm && pnpm run build:ts",
    "build:node": "pnpm --filter '@html-to-markdown/node' run build",
    "build:wasm": "pnpm --filter '@html-to-markdown/wasm' run build:all",
    "build:ts": "pnpm --filter 'html-to-markdown' run build && pnpm --filter 'html-to-markdown' run build:cli",
    "test": "pnpm -r test",
    "test:node": "pnpm --filter '@html-to-markdown/node' test",
    "test:wasm": "pnpm --filter '@html-to-markdown/wasm' test",
    "test:ts": "pnpm --filter 'html-to-markdown' test",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
